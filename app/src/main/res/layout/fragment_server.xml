<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="servertimestorage"
            type="org.publicntp.gnssreader.repository.TimeStorageConsumer" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="org.publicntp.gnssreader.ui.ServerFragment">

        <lecho.lib.hellocharts.view.LineChartView
            android:id="@+id/server_line_graph"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/server_layout_net_activity"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/server_display_net_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:layout_marginStart="0dp"
                    android:fontFamily="@font/roboto"
                    android:text="@string/placeholder_server_traffic"
                    android:textColor="@color/primary_dark"
                    android:textSize="@dimen/large_detail_text_size"
                    android:textStyle="bold"
                    tools:text="1,234" />

                <TextView
                    android:id="@+id/server_display_net_units"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="packets/sec"
                    android:textColor="@color/primary_dark"
                    android:textSize="@dimen/unit_text_size"
                    tools:text="packets/sec" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/server_layout_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/server_display_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:text="@{servertimestorage.getAdjustedDateString(context)}"
                        android:textColor="@color/primary_dark"
                        android:textSize="@dimen/large_detail_text_size"
                        android:textStyle="bold"
                        tools:text="00:00:00" />

                    <TextView
                        android:id="@+id/server_display_time_zone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@string/default_timezone"
                        android:textColor="@color/primary_dark"
                        android:textSize="@dimen/unit_text_size"
                        tools:text="TZONE" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/server_layout_offset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="0dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/server_text_offset"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:layout_marginStart="0dp"
                        android:fontFamily="@font/roboto_light"
                        android:text="@{servertimestorage.getDateDifference()}"
                        android:textColor="@color/primary"
                        android:textSize="34sp"
                        tools:text="Â±0.000" />

                    <TextView
                        android:id="@+id/time_text_offset_units"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/roboto_light"
                        android:text="@string/time_accuracy_units"
                        android:textColor="@color/primary"
                        android:textSize="20sp" />

                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/server_btn_toggle"
                style="@style/AppTheme.Button.Large"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/server_status"
                android:textSize="20sp"
                tools:text="Server On" />

        </LinearLayout>

    </LinearLayout>
</layout>
