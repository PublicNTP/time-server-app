<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="center_horizontal">
        <shape android:shape="rectangle">
            <solid android:color="@color/greyreallydark" />
            <corners android:radius="@dimen/togglebutton_radius" />
        </shape>
    </item>

    <item
        android:gravity="center_horizontal|bottom"
        android:bottom="@dimen/togglebutton_indicator_bottom"
        android:top="@dimen/togglebutton_indicator_top">
        <shape android:shape="rectangle">
            <solid android:color="@color/black" />
            <corners android:radius="@dimen/togglebutton_indicator_corner_radius" />
            <size android:height="@dimen/togglebutton_indicator_height" android:width="@dimen/togglebutton_indicator_width"/>
        </shape>
    </item>
</layer-list>
